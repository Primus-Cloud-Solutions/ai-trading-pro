# AI Trading SaaS Platform - Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
FLASK_APP=src/main.py
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=False
TESTING=False

# Database Configuration
DATABASE_URL=postgresql://ai_trading_user:your_password@localhost/ai_trading_saas

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Domain and SSL
DOMAIN_NAME=your-domain.com
EMAIL=your-email@domain.com

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Trading API Keys (Optional - for live trading)
ALPACA_API_KEY=your-alpaca-api-key
ALPACA_SECRET_KEY=your-alpaca-secret-key
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# External API Keys
YAHOO_FINANCE_API_KEY=optional-yahoo-finance-api-key
COINGECKO_API_KEY=optional-coingecko-api-key

# Security Settings
BCRYPT_LOG_ROUNDS=12
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/ai_trading_saas/app.log

# Celery Configuration (for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Application Settings
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=/opt/ai_trading_saas/uploads
ALLOWED_EXTENSIONS=jpg,jpeg,png,pdf

# Subscription and Payment (for future integration)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
GOOGLE_ANALYTICS_ID=your-google-analytics-id

